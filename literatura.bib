@article{JIANMINZHENG1995111,
title = {{$GC^n$ continuity conditions for adjacent rational parametric surfaces}},
journal = {Computer Aided Geometric Design},
volume = {12},
number = {2},
pages = {111 - 129},
year = {1995},
issn = {0167-8396},
doi = {https://doi.org/10.1016/0167-8396(94)00005-D},
url = {http://www.sciencedirect.com/science/article/pii/016783969400005D},
author = {Jianmin Zheng and  Guozhao Wang and  Youdong Liang},
keywords = {Rational surfaces, Bézier patches, Geometric continuity, Total differential vectors, Connecting functions, Parameter transformation},
abstract = {In this paper, the constraints on the homogeneous surface belonging to a certain rational surface are derived which are both necessary and sufficient to ensure that the rational surface is nth-order geometric continuous. This gives up the strong restriction that requires the homogeneous surface to be as smooth as the rational surface. Further the conditions for the rectangular rational Bézier patches are developed, and some simple and practical sufficient conditions are presented which might give a valid means for the construction of GCn connecting surfaces.}
}

