@article{YE1996521,
title = {{Geometric continuity between adjacent Bézier patches and their constructions}},
journal = {Computer Aided Geometric Design},
volume = {13},
number = {6},
pages = {521 - 548},
year = {1996},
issn = {0167-8396},
doi = {https://doi.org/10.1016/0167-8396(95)00043-7},
url = {http://www.sciencedirect.com/science/article/pii/0167839695000437},
author = {Xiuzi Ye and Youdong Liang and Horst Nowacki},
keywords = {CAD, CAGD, Bézier patches, -continuity conditions, -continuous surface patches},
abstract = {In this paper, the necessary and sufficient conditions for two adjacent Bézier surface patches of arbitrary degrees joining Gn-continuously along a common boundary curve are presented. These conditions are represented directly by the two surface patches, or via an intermediate surface patch. Configurations of the coefficient functions attached to the adjacent Bézier patches are obtained. Based on these results, an algorithm to compute the order of continuity between two given Bézier patches along a common boundary curve is presented. The Gn compatibility conditions which involve the coefficient functions and the control points of the two adjacent Bézier patches are developed. Examples for the construction of G1- and G2-continuous Bézier patches are given to illustrate the conditions developed.}
}

@article{DEROSE1990165,
title = {{Necessary and sufficient conditions for tangent plane continuity of Bézier surfaces}},
journal = {Computer Aided Geometric Design},
volume = {7},
number = {1},
pages = {165 - 179},
year = {1990},
issn = {0167-8396},
doi = {https://doi.org/10.1016/0167-8396(90)90028-P},
url = {http://www.sciencedirect.com/science/article/pii/016783969090028P},
author = {Tony D. DeRose},
abstract = {Sets of conditions are derived that are necessary and sufficient for tangent plane continuity between two polynomial or rational Bézier surfaces. The patches may be given in either triangular or rectangular form, and no assumptions are made concerning the relative degrees of the patches; the only assumption is that the patches share common boundary control points (and weights in the case of rational surfaces). The conditions are shown to be minimal in the sense that they are, in general, independent.}
}

